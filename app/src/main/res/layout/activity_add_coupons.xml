<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coupons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddCoupons">

   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="16dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:gravity="center_horizontal">

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Add Coupons"
          android:textColor="@color/RedKK"
          android:textSize="25sp"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Restaurant Name"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantDiscountRate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Discount Percentage"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantDiscountCode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Enter Promo Code"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantMinimumOrder"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Minimum Order"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantOutletAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Promo Code Active Outlet Address"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <EditText
          android:id="@+id/restaurantDiscountCodeValidTo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner2"
          android:hint="Valid To (YYYY-MM-DD)"
          android:padding="15dp"
          android:textColorHint="@color/hint_color"
          android:textStyle="bold"
          android:layout_marginBottom="16dp"/>

      <Button
          android:id="@+id/buttonAddCoupon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/RedKK"
          android:padding="10dp"
          android:text="Add Coupon"
          android:textColor="@color/white"/>

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>